{
  "name": "qr_app",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev --dotenv .env.local",
    "dev:local": "bun dev & bun dev:convex",
    "dev:local:ios": "bun dev & bun dev:convex & bun dev:ios",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "test": "vitest",
    "ionic": "bunx @ionic/cli",
    "cap:sync": "bunx cap sync",
    "dev:convex": "bunx convex dev",
    "dev:ios": "bun ionic capacitor run ios --livereload-url=http://localhost:3000  --external --mode development",
    "dev:db:schema": "bun x @better-auth/cli generate --config ./convex/betterAuth/auth.ts --output ./convex/betterAuth/schema.ts",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:unit": "vitest --project unit",
    "test:nuxt": "vitest --project nuxt",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui"
  },
  "dependencies": {
    "@capacitor/app": "8.0.0",
    "@capacitor/core": "8.0.1",
    "@capacitor/haptics": "8.0.0",
    "@capacitor/ios": "8.0.1",
    "@capacitor/keyboard": "8.0.0",
    "@capacitor/status-bar": "8.0.0",
    "@convex-dev/better-auth": "^0.10.10",
    "@nuxt/eslint": "1.12.1",
    "@nuxt/fonts": "0.12.1",
    "@nuxt/hints": "1.0.0-alpha.5",
    "@nuxt/icon": "2.2.0",
    "@nuxt/image": "2.0.0",
    "@nuxt/test-utils": "3.23.0",
    "@nuxtjs/ionic": "1.0.2",
    "better-auth": "^1.4.14",
    "convex": "^1.31.7",
    "convex-nuxt": "0.1.5",
    "convex-vue": "^0.1.4",
    "eslint": "^9.0.0",
    "nuxt": "^4.2.2",
    "vue": "^3.5.26",
    "vue-router": "^4.6.4"
  },
  "devDependencies": {
    "@capacitor/cli": "8.0.1",
    "@playwright/test": "^1.57.0",
    "@vitest/coverage-v8": "^4.0.17",
    "@vue/test-utils": "^2.4.6",
    "happy-dom": "^20.3.1",
    "playwright-core": "^1.57.0",
    "vitest": "^4.0.17"
  }
}
